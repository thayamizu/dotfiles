// 既定値を上書きするには、このファイル内にキー バインドを挿入します
/* ==============================================================
*  - Note:
*    - keep default shortcut
*  - Prefix
*    - ctrl+w ... Window Management
*    - ctrl+e ... Code Editing
*    - ctrl+j ... SCM
*    - ctrl+r ... Refactor
================================================================ */
[
    //----------------------------------------------------------
    //エディタ操作
    //----------------------------------------------------------
    {
        "key": "ctrl+e i",
        "command": "editor.action.goToImplementation",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+e d",
        "command": "editor.action.goToDeclaration",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+e r",
        "command": "editor.action.refactor",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+e n",
        "command": "editor.action.rename",
        "when": "editorTextFocus"
    },
    //----------------------------------------------------------
    // 検索関連
    //----------------------------------------------------------
    // 検索実行後の候補への移動
    {
        "key": "ctrl+n",
        "command": "workbench.action.interactivePlayground.arrowDown",
        "when": "interactivePlaygroundFocus && !editorTextFocus"
    },
    //----------------------------------------------------------
    // サイドバーでのファイル名編集(ui移動はなし)
    //----------------------------------------------------------
    {
        "key": "ctrl+r",
        "command": "renameFile",
        "when": "explorerViewletVisible && filesExplorerFocus"
    },
    {
        "key": "Enter",
        "command": "explorer.openToSide",
        "when": "explorerViewletVisible && filesExplorerFocus"
    },
    //----------------------------------------------------------
    // サイドバーのファイルをエディターで開く(サイドバー -> エディター)
    //----------------------------------------------------------
    {
        "key": "ctrl+l",
        "command": "explorer.openToSide",
        "when": "explorerViewletFocus && explorerViewletVisible"
    },
    //----------------------------------------------------------
    // サイドバーのトグル(*->サイドバーへの移動)
    //----------------------------------------------------------
    {
        "key": "ctrl+w p",
        "command": "workbench.view.explorer",
        "when": "!explorerViewletVisible"
    },
    {
        "key": "ctrl+w p",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "explorerViewletVisible && !searchViewletVisible"
    },
    //----------------------------------------------------------
    //よく使うサイドバーの切り替え処理
    //----------------------------------------------------------
    //エクスプローラーの表示
    {
        "key": "ctrl+w w",
        "command": "workbench.view.explorer",
    },
    //検索
    {
        "key": "ctrl+w f",
        "command": "workbench.view.search",
    },
    //ソース管理プロバイダー
    {
        "key": "ctrl+w s",
        "command": "workbench.view.scm",
    },
    //GitLens
    {
        "key": "ctrl+w g",
        "command": "gitlens.views.repositories:gitlens.focus",
    },
    //Debug
    {
        "key": "ctrl+w d",
        "command": "workbench.view.debug",
    },
    //Bookmark
    {
        "key": "ctrl+w b",
        "command": "workbench.view.extension.bookmarks",
    },
    //Docker
    {
        "key": "ctrl+w k",
        "command": "workbench.view.extension.dockerView",
    },
    //AWS
    {
        "key": "ctrl+w a",
        "command": "workbench.view.extension.aws-explorer",
    },
    //Note
    {
        "key": "ctrl+w n",
        "command": "gitlens.views.repositories:gitlens.focus",
    },
    //----------------------------------------------------------
    // vscodeのviewを選択
    //----------------------------------------------------------
    {
        "key": "ctrl+w ctrl+v",
        "command": "workbench.action.quickOpenView"
    },
    {
        "key": "ctrl+w v",
        "command": "workbench.action.quickOpenView"
    },
    //----------------------------------------------------------
    // vscodeのterminalのトグル
    //----------------------------------------------------------
    {
        "key": "ctrl+w t",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "!terminalFocus'"
    },
    {
        "key": "ctrl+w t",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus"
    },
    //----------------------------------------------------------
    // gitの操作
    //----------------------------------------------------------
    {
        "key": "ctrl+e c",
        "command": "git.commit",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+e a",
        "command": "git.stage",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+e g",
        "command": "cursorTop",
        "when": "editorTextFocus"
    }
]
